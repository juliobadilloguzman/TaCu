<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView

            android:id="@+id/imageEvaluar"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/ic_launcher" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nombreEvaluar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:padding="20dp"
                    android:textSize="20dp"
                    android:textColor="@color/colorBlack"
                    android:text="TextView" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:justificationMode="inter_word"
                            android:padding="10dp"
                            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Cras ornare lorem ac tortor pharetra, id sagittis arcu maximus. Quisque eget ultricies turpis. Curabitur blandit vehicula tellus, eget finibus enim porttitor ut. Curabitur dignissim, ipsum sit amet elementum maximus, velit risus varius orci, quis feugiat nisi augue in odio. Phasellus in enim eget orci imperdiet eleifend. Vivamus fermentum, lorem vitae semper efficitur, est elit varius augue, quis luctus risus sem eu lectus. Nam sollicitudin sit amet quam non pharetra. Morbi quis sodales erat. Duis hendrerit neque euismod turpis hendrerit, at commodo est fringilla." />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/star"
                                android:drawablePadding="5dp"
                                android:drawableTint="@color/colorGold"
                                android:text="TextView"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/clock"
                                android:drawablePadding="5dp"
                                android:drawableTint="@color/colorRed"
                                android:text="TextView"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/phone"
                                android:drawablePadding="5dp"
                                android:drawableTint="@color/colorGrey"
                                android:text="TextView"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <Button
                            android:id="@+id/buttonEvaluar"
                            android:layout_width="280dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/background_button"
                            android:backgroundTint="@color/colorBlueEdit"
                            android:gravity="center"
                            android:text="@string/btnTextGoToEvaluation"
                            android:textAllCaps="true"
                            android:textColor="@android:color/white" />

                        <Button
                            android:id="@+id/buttonDirection"
                            android:layout_width="280dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/background_button"
                            android:backgroundTint="@color/colorRed"
                            android:gravity="center"
                            android:text="@string/btnTextGoToMap"
                            android:textAllCaps="true"
                            android:textColor="@android:color/white" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>