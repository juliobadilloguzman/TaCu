<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ranking.RankingFragment">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorRed"
        android:textSize="24sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:text="@string/titleRanking" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewSecondPlace"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/ic_launcher_round" />

            <ImageView
                android:id="@+id/imageViewFirstPlace"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:src="@mipmap/ic_launcher_round" />

            <ImageView
                android:id="@+id/imageViewThirdPlace"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="65dp"
                android:layout_marginRight="5dp"
                android:src="@mipmap/ic_launcher_round" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageViewPodiumSecond"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="17dp"
                android:layout_weight="1"
                android:src="@drawable/podium" />

            <ImageView
                android:id="@+id/imageViewPodiumFirst"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginStart="-43dp"
                android:layout_marginEnd="-43dp"
                android:layout_toStartOf="@+id/imageViewPodiumThird"
                android:layout_toEndOf="@+id/imageViewPodiumSecond"
                android:layout_weight="1"
                android:src="@drawable/podium_winner" />

            <ImageView
                android:id="@+id/imageViewPodiumThird"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="17dp"
                android:layout_weight="1"
                android:src="@drawable/podium_third" />


        </RelativeLayout>

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >


    </ListView>


</LinearLayout>